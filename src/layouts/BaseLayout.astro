---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const baseUrl = import.meta.env.BASE_URL;

const { lang, langSwitchPath, pageTitle } = Astro.props;
console.log(
  `BaseLayout - lang: ${lang}, otherLangPath: ${langSwitchPath}, pageTitle: ${pageTitle}`
);
// TODO change the favicon to the logo
// TODO add a canonical link
// TODO add href links
// TODO remove logging for props
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header lang={lang} langSwitchPath={langSwitchPath} />
    <h1>{pageTitle}</h1>

    <slot />

    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
