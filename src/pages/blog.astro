---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Home Page";

let baseUrl = import.meta.env.BASE_URL;
baseUrl = baseUrl.startsWith("/") ? baseUrl.slice(1) : baseUrl;
---

<BaseLayout pageTitle={pageTitle}>
  <p>This is where I will post about my journey learning Astro.</p>
  <ul>
    <li><a href=`${Astro.site}${baseUrl}posts/post-1/`>Post 1</a></li>
    <li><a href=`${Astro.site}${baseUrl}posts/post-2/`>Post 2</a></li>
    <li><a href=`${Astro.site}${baseUrl}posts/post-3/`>Post 3</a></li>
  </ul>
</BaseLayout>
