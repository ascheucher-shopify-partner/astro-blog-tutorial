---
import BaseLayout from "../../layouts/BaseLayout.astro";
const pageTitle = "Tag Index";

let baseUrl = import.meta.env.BASE_URL;
baseUrl = baseUrl.startsWith("/") ? baseUrl.slice(1) : baseUrl;

const allPosts: any = await Astro.glob("../posts/*.md");

const uniqueTags = [
  ...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat()),
];
---

<BaseLayout pageTitle={pageTitle}>
  <div class="tags">
    {
      uniqueTags.map((tag) => (
        <p class="tag">
          {/* <a href={`${baseUrl}tags/${tag}`}>{tag}</a> */}
          <a href={`/astro-blog-tutorial/tags/${tag}/`}>{tag}</a>
        </p>
      ))
    }
  </div>
</BaseLayout>
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>